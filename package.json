{
  "name": "devportal-base",
  "version": "1.1.72",
  "private": true,
  "engines": {
    "node": "20 || 22"
  },
  "scripts": {
    "init-local": "make full && yarn check-dynamic-plugins",
    "start": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend",
    "start-backend": "yarn workspace backend start",
    "dev": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app --config ../../app-config.yaml --config ../../app-config.dynamic-plugins.yaml",
    "dev-local": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app -- --config ../../app-config.yaml --config ../../app-config.local.yaml --config ../../app-config.dynamic-plugins.yaml",
    "debug-local": "NODE_OPTIONS=\"--no-node-snapshot --inspect\" turbo run start --filter=backend -- --config ../../app-config.yaml --config ../../app-config.local.yaml --config ../../app-config.dynamic-plugins.yaml",
    "dev-github": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app -- --config ../../app-config.yaml --config ../../app-config.dynamic-plugins.yaml --config ../../app-config.github.yaml",
    "dev-azure": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app -- --config ../../app-config.yaml --config ../../app-config.dynamic-plugins.yaml --config ../../app-config.azure.yaml",
    "dev-ldap": "NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app -- --config ../../app-config.yaml --config ../../app-config.dynamic-plugins.yaml --config ../../app-config.ldap.yaml",
    "build": "turbo run build",
    "build:backend": "yarn tsc && yarn workspace backend build",
    "build:all": "yarn tsc && turbo run build",
    "build-image": "yarn workspace backend build-image",
    "build-local-image": "./scripts/build-local-image.sh",
    "tsc": "turbo run tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "update-backstage": "backstage-cli versions:bump --pattern '@{backstage,roadiehq,backstage-community,veecode-platform}/*'",
    "new": "backstage-cli new",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "dependencies": {
    "@backstage/plugin-techdocs": "^1.16.1",
    "@backstage/plugin-techdocs-react": "^1.3.6",
    "better-sqlite3": "^12.2.0",
    "webpack": "^5.94.0"
  },
  "devDependencies": {
    "@backstage/cli": "^0.35.1",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@jest/environment-jsdom-abstract": "^30.2.0",
    "@playwright/test": "^1.55.1",
    "@types/jsdom": "^27",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "turbo": "^2.6.3",
    "typescript": "~5.8.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router": "6.30.1",
    "react-router-dom": "6.30.1",
    "@backstage/backend-dynamic-feature-service": "^0.7.4",
    "@backstage/config": "^1.3.6",
    "undici": "7.16.0",
    "better-sqlite3": "^12.2.0",
    "webpack": "5.101.3",
    "form-data": "^4.0.4",
    "jsonpath-plus": "^10.2.0",
    "braces": "^3.0.3",
    "linkifyjs": "^4.3.2",
    "@playwright/test": "^1.55.1",
    "@kubernetes/client-node": "^1.4.0",
    "jest": "^30.2.0",
    "jsdom": "^27.1.0",
    "@jest/environment-jsdom-abstract": "^30.2.0"
  },
  "prettier": "@backstage/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
