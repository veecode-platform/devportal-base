    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": ["turbo", "run", "start", "--filter=backend", "--", "--config", "../../app-config.yaml", "--config", "../../app-config.local.yaml", "--config", "../../app-config.dynamic-plugins.yaml"],
            "env": {
                "NODE_OPTIONS": "--no-node-snapshot --inspect"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}